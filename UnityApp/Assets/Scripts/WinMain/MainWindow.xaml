<Window x:Class="WinMain.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinMain"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1250"
        MinHeight="700" MinWidth="1250">
    <Grid>
        <!-- Кнопка с изображением в правом нижнем углу -->
        <Button HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Width="50" Height="50"
                Margin="10"
                Background="Transparent" BorderBrush="Transparent"
                Click="ImageButton_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Image Source="img/pngwing.com (1).png" 
                           Stretch="Fill" 
                           Opacity="1"/>
                </ControlTemplate>
            </Button.Template>
            <Button.Style>
                <Style TargetType="Button">
                    <!-- Триггер для изменения внешнего вида при наведении -->
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="0.7"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
