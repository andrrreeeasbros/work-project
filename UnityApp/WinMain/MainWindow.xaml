<Window x:Class="WinMain.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinMain"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1250"
        MinHeight="700" MinWidth="1250"
        ResizeMode="CanMinimize" 
        WindowState="Normal">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="400" />
            <RowDefinition Height="225" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <local:ChildControl1 Grid.Column="0" Margin="10" />
            <local:ChildControl2 Grid.Column="1" Margin="10" />
        </Grid>

        <!-- Нижняя панель с кнопкой -->
        <Grid Grid.Row="1">
            <!-- Кнопка с изображением -->
            <Button HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Width="75" Height="75"
                    Margin="10"
                    Background="LightGray"
                    BorderBrush="Black"
                    Click="ImageButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Image Source="img/pngwing.com (1).png" 
                               Stretch="Fill" 
                               Opacity="1"/>
                    </ControlTemplate>
                </Button.Template>

                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Grid>
</Window>
